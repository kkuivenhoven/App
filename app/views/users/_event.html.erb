<% if @events.count > 0 %>
				<center><h5>Skate Spot Events</h5></center>
 <div class="table-responsive">
   <table class="table skate_table">
     <thead>
       <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Date</th>
       </tr>
     </thead>

     <tbody>
      <% @events.each do |event| %>
      <tr>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
        </tr>
      </tr>
     <% end %>
   </tbody>
  </table>
 </div>
<% else %>
		<center>There are no events posted.</center>
<% end %>
