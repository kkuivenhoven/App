<p id="notice"><%= notice %></p>

<div class="row">
<div class="btn-group btn-group-justified">
  <div class="btn-group">
     <%= link_to('Back', skate_spots_path, class: 'btn btn-primary') %>
   </div>
  <div class="btn-group">
    <!-- /skate_spots/:skate_spot_id/ratings/new -->
    <%= link_to('New Rating', new_skate_spot_rating_path(@skate_spot), class: 'btn btn-primary') %>
  </div>
  <div class="btn-group">
     <%= link_to('Edit', edit_skate_spot_path(@skate_spot), class: 'btn btn-primary') %>
  </div>
</div>
</div>

<div class="row">
 <div class="col-sm-4">
   <h4>Skate Spot: <p><%= @skate_spot.name %></p></h4>
   <h4>Location: <p><%= @skate_spot.location.address %></p></h4>

   <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapse1">Click to view ratings</a>
        </h4>
      </div>
      <div id="collapse1" class="panel-collapse collapse">
        <ul class="list-group">
         <% @skate_spot.ratings.each do |rating| %>
          <li class="list-group-item">
           <tr>
            <td>
              <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown">Rating
                <b class="caret"></b>
               </a>
               <ul class="dropdown-menu">
                <li><%= link_to 'Show', [rating.skate_spot, rating] %></li>
                <li><%= link_to 'Edit', edit_skate_spot_rating_path(rating.skate_spot, rating) %></li>
                <li><%= link_to 'Destroy', [rating.skate_spot, rating], method: :delete, data: { confirm: 'Are you sure?' } %></li>
               </ul>
             </li>
           <!--</td>-->
           <td><%= rating.difficulty %></td>
           <td><%= rating.police %></td>
           <td><%= rating.pedestrian %></td>
           <td><%= rating.time %></td>
           <td><%= rating.description %></td>
         </td>
        </tr>
       </li>
      <% end %>
     </ul>
    <div class="panel-footer">Shred.</div>
   </div>
  </div> 
 </div>

</div>

<br>

<div class="col-sm-8">
<div class="table-responsive">
<!-- below 2 divs adds map div -->
<div style='width: 800px;'>
  <div id="geolocation" style='width: 800px; height: 400px;'></div>
</div>

<!-- this has 0,0 lat/lon dummy marker data; leaving for now -->
<script type="text/javascript">

  var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'geolocation'} }, function(){
  if(navigator.geolocation)
    navigator.geolocation.getCurrentPosition(displayOnMap);
});

function displayOnMap(position){
  var marker = handler.addMarker({
    lat: <%= @skate_spot.location.latitude %>,
    //lat: position.coords.latitude,
    lng: <%= @skate_spot.location.longitude %>
    //lng: position.coords.longitude
  });
  handler.map.centerOn(marker);
};

</script>

</div>
</div>
