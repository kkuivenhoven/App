<h3>Posted Skate Spots</h3>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skate_spots.each do |skate_spot| %>
    <tr>
      <tr>
        <td><%= skate_spot.name %></td>
        <td><%= skate_spot.zip_code %></td>
        <td><%= link_to('Show', skate_spot, class: 'btn btn-default btn-xs') %></td>
        <td><%= link_to('Edit', edit_skate_spot_path(skate_spot), class: 'btn btn-default btn-xs') %></td>
        <td><%= link_to('Destroy', skate_spot, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

