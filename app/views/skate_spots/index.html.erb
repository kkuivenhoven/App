<div class="btn-group btn-group-justified">
  <div class="btn-group">
    <%= link_to('Home', root_path, class: 'btn btn-default btn') %></button>
  </div>
  <div class="btn-group">
    <%= link_to('New Skate Spot', new_skate_spot_path, class: 'btn btn-default btn') %></button>
  </div>
