<div class="chatboxhead" data-cid="<%= @conversation.id %>">
  <div class="chatboxtitle">
    <i class="fa fa-comments"></i>

    <h1 class="msg_link"><%= link_to "#{@reciever.name}", @reciever %> </h1>
		<!--img class="chatImg" src="http://placehold.it/50x50" alt="Avatar"-->
  </div>
  <div class="chatboxoptions">
    <!--%= link_to "<i class='fa  fa-minus'></i> ".html_safe, "#", class: "toggleChatBox", "data-cid" => @conversation.id %>
    &nbsp;&nbsp;-->
    <%= link_to "<i class='fa  fa-times'></i> ".html_safe, "#", class: "closeChat", "data-cid" => @conversation.id %>
  </div>
  <br clear="all"/>
</div><!-- chatboxhead -->

<div class="chatboxcontent">
  <% if @messages.any? %>
      <%= render @messages %>
  <% end %>
</div><!-- chatboxcontent -->

<div class="chatboxinput">
  <%= form_for([@conversation, @message], :remote => true, :html => {id: "conversation_form_#{@conversation.id}"}) do |f| %>
      <%= f.text_area :body, class: "chatboxtextarea", "data-cid" => @conversation.id, placeholder: "Type here! Press enter to send your message." %>
  <% end %>
</div><!-- chatboxinput -->

<%= subscribe_to conversation_path(@conversation) %>
