<% provide(:button_text, 'Submit') %>
  <div class="panel panel-default">
    <div class="panel-body">

    <%= form_for([@event.skate_spot,@event]) do |f| %>  

    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', maxlength: 70 %>

    <%= f.label :description %><br>
    <%= f.text_field :description, class: 'form-control', maxlength: 180 %>

		<%= f.label :date %><br>
		<!--%= f.datetime_select :date, class: 'form-control', prompt: true, ampm: true %><br><br-->
		<%= f.datetime_select :date, class: 'form-control', ampm: true %><br><br>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>

		<!--%= f.hidden_field "user_id", current_user.id %-->
<% end %>

